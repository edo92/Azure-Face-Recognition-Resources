{
  "compilerOptions": {
    "target": "ES2016",
    "module": "CommonJS",
    "sourceMap": false,
    "removeComments": true,
    "noEmitOnError": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": "./src"
  },
  "include": ["src/*"],
  "exclude": ["dist", "node_modules"]
}
